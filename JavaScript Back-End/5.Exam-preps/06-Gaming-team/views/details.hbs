<main id="details">
    <section id="details-info">
        <div class="game-image">
            <img src="{{item.imageUrl}}">
        </div>

        <div class="game-info">
            <div class="game-text">
                <h1 id="name">{{item.name}}</h1>
                <h3 id="platform">Platform: {{item.itemOptions}}</h3>
                <p id="price"><span>Price: ${{item.price}}</span></p>
                <p id="genre"><span>Genre: {{item.genre}}</span></p>
                <p id="description">{{item.description}}</p>
            </div>
            <div class="product-btn">
                <!--Only for registered user and author of the publication -->
                {{#if item.isOwner}}
                <div class="author">
                    <a href="/item/{{item._id}}/edit" class="btn-edit">Edit</a>
                    <a href="/item/{{item._id}}/delete" class="btn-delete">Delete</a>
                </div>
                {{else}}
                    {{#if hasUser}}
                        {{#unless item.isInteracted}}
                        <!-- Logged in user who has not yet buy this game code-->
                        <a href="/item/{{item._id}}/interact" class="btn-buy">Buy</a>
                        {{else}}
                        <!-- Logged in user who has already buy this game code-->
                        <p class="buy-message">You have already bought this game</p>
                        {{/unless}}
                    {{/if}}
                {{/if}}
            </div>
        </div>
    </section>
</main>