<section id="edit-container">
    <div class="edit-container-info">
        <h1>Edit Announcement</h1>
        <form method="POST">
            <label>Name:</label>
            <input type="text" id="name" name="name" value="{{item.name}}">
            <label>Image:</label>
            <input type="text" id="image" name="imageUrl" value="{{item.imageUrl}}">
            <label>Price:</label>
            <input type="number" id="price" name="price" value="{{item.price}}">
            <label>Description:</label>
            <textarea name="description"
                id="description">{{item.description}}</textarea>
            <label>Payment method:</label>
            <select id="payment" name="">
                <option {{isSelected 'crypto-wallet' item.itemOptions}} value="crypto-wallet">Crypto Wallet</option>
                <option {{isSelected 'credit-card' item.itemOptions}} value="credit-card">Credit Card</option>
                <option {{isSelected 'debit-card' item.itemOptions}} value="debit-card">Debit Card</option>
                <option {{isSelected 'paypal' item.itemOptions}} value="paypal">PayPal</option>
            </select>
            <input type="submit" id="btn" value="EDIT"></input>
        </form>
    </div>
</section>