<section class="crypto-market">
    <h1><span>Crypto</span> Trade</h1>
    {{#if items}}
    <div class="offer-list">
        {{#each items}}
        <div class="coin">
            <div class="coin-img">
                <img src="{{imageUrl}}">
            </div>
            <div class="coin-info">
                <h1>{{name}}</h1>
                <p><span>Price: </span>${{price}}</p>
                <p><span>Payment: </span>{{itemOptions}}</p>
            </div>
            <a href="/catalog/{{_id}}/details" class="btn-details">Details</a>
        </div>
        {{/each}}


    </div>
    {{else}}
    <div class="no-offer">
        <p>There are no crypto offers found!</p>
    </div>
    {{/if}}
</section>