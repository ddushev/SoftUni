<section id="details-info">
    <h1>Details</h1>
    <div class="coin-image">
        <img src="{{item.imageUrl}}">
    </div>

    <div class="coin-info">
        <div class="coin-text">
            <h1 id="name">{{item.name}}</h1>
            <h3 id="payment">Payment method:{{item.itemOptions}}</h3>
            <p id="price"><span>Price: ${{item.price}}</span></p>
            <p id="description">{{item.description}}</p>
        </div>
        {{#if hasUser}}
        <div class="product-btn">
            {{#if item.isOwner}}
            <div class="author">
                <a href="/item/{{item._id}}/edit" class="btn-edit">Edit</a>
                <a href="/item/{{item._id}}/delete" class="btn-delete">Delete</a>
            </div>
            {{/if}}

            {{#unless item.isOwner}}
                {{#unless item.isInteracted}}
                <a href="/item/{{item._id}}/interact" class="btn-buy">Buy</a>
                {{else}}
                <p class="buy-message">You already bought these crypto coins.</p>
                {{/unless}}
            {{/unless}}
        </div>
        {{/if}}
    </div>
</section>