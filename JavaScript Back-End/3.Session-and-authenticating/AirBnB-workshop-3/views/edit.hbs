<section id="create-section" class="">

    <h1 class="item">Edit Accomodation</h1>

    <main class="item padded align-center">
        {{#if error}}
        <div class="error-box">
            {{#each error}}
            <p>{{this}}</p>
            {{/each}}
        </div>
        {{/if}}
        <form class="layout left large" method="post" action="/room/{{room._id}}/edit">
        {{#with room}}
            <div class="col aligned">
                <label><span>Name</span><input type="text" value="{{name}}" name="name"></label>
                <label><span>City</span><input type="text" value="{{city}}" name="city"></label>
                <label><span>Beds</span><input type="number" value="{{beds}}" name="beds"></label>
                <label><span>Price per night</span><input type="number" value="{{price}}" name="price"></label>
                <label><span>Image URL</span><input type="text" value="{{imgUrl}}" name="imgUrl"></label>
            </div>

            <div class="content pad-med align-center vertical">
                <label>
                    <span>Description</span>
                    <textarea name="description">{{description}}</textarea>
                </label>
                <div class="align-center">
                    <input class="action" type="submit" value="Update Item">
                </div>
            </div>
        {{/with}}

        </form>
    </main>

</section>