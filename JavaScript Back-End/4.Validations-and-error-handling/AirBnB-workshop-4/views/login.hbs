<section id="create-section" class="">

    <h1 class="item">Login</h1>
    <div class="padded">
        <main class="item align-center">
            {{#if error}}
            <div class="error-box">
                {{#each error}}
                <p>{{this}}</p>
                {{/each}}
            </div>
            {{/if}}
            <form class="layout left large" method="post" action="/auth/login">

                <div class="aligned">
                    <label><span>Username</span><input type="text" name="username"></label>
                    <label><span>Password</span><input type="password" name="password"></label>
                    <input class="cta action" type="submit" value="Sign in">
                </div>
            </form>
            <footer>Don't have an account? <a href="/auth/register">Sign up here.</a></footer>
        </main>
    </div>


</section>